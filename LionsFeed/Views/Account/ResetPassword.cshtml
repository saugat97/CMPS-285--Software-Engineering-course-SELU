@model LionsFeed.ViewModel.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2>Reset Your Password</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword" method="post">
            <h4>Please Reset your password.</h4>
            <hr />

            <div class="form-group">
                <label asp-for="WNumber">W#:</label>
                <input asp-for="WNumber" class="form-control" />
                <span asp-validation-for="WNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tempPassword">Temporary password:</label>
                <input asp-for="tempPassword" class="form-control" />
                <span asp-validation-for="tempPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password:</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Reset</button>
        </form>
    </div>
</div>
