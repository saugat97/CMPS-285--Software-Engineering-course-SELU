@model LionsFeed.ViewModel.Account.RegisterViewModel
@{
    ViewData["Title"] = "Home Page";
}
<br>

<div class="Layout">


    @await Html.PartialAsync("LeftBar")



    <!-- for two columns in a webpage -->
    <div class="col-md-4">
        <h2 style="font-family: 'Century Gothic'; font-size: 35px;" onmouseover="style.color='green'" onmouseout=" style.color='black' " font-size: 40px;> Register</h2>


        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group" style="font-family: 'Century Gothic'">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control"style="border-radius:25px; border: 1px solid green; width: 300px;">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-family: 'Century Gothic'">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control"style="border-radius:25px; border: 1px solid green; width: 300px;">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-family: 'Century Gothic'">
                <label asp-for="WNumber">W#</label>
                <input asp-for="WNumber" class="form-control" style="border-radius:25px; border: 1px solid green; width: 300px;">
                <span asp-validation-for="WNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-family: 'Century Gothic'">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control"style="border-radius:25px; border: 1px solid green; width: 300px;">
                    <option value="Others">I'd rather not specify</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Register </button>
        </form>
    </div>

    <br><br><br /><br />
    <div class="col-md-6" style="text-align:center">

        @*<h2>Carousel</h2>*@
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!--  for slides -->
            <div class="carousel-inner">
                <div class="item active" style="height: 290px;">
                    <img src="https://www.lionsports.net/images/2017/1/17/strawberry_stadium_fb_2016_action_new_web_092416_955.jpg">
                </div>

                <div class="item" style="height: 290px; " >
                    <img src="https://www.southeastern.edu/news_media/news_releases/2011/august/images/slu_union_rendering.jpg">
                </div>

                <div class="item" style="height: 290px; ">
                    <img src="https://bloximages.chicago2.vip.townnews.com/livingstonparishnews.com/content/tncms/assets/v3/editorial/2/4a/24aec31c-e056-11e7-880f-1f3c714b9f86/5a31abb9a4934.image.jpg?resize=1200%2C741">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>


    
