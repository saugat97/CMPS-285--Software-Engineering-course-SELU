@model IEnumerable<LionsFeed.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h2>Users</h2>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50">
                    <a class="a1" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ImageUrl" height="30" width="30" style="border-radius:50%" />
                    </a>
                </td>
                <td>
                    <a class="a1" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @if (item.Role == "Admin")
                        {
                            <img src="~/upload/img/star.png" height="20" width="20" />
                        }
                    </a>
                </td>
                <td>
                    <a class="a1" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>

                    @*<button type="submit" class="btn btn-info btn-sm" asp-area="" asp-controller="ApplicationUsers" asp-action="Edit" asp-route-id="@item.Id"></button>|*@
                    <a class="a1" asp-action="Edit" asp-route-id="@item.Id">
                        <div class="btn btn-info">
                            <span class="glyphicon glyphicon-edit"></span>
                        </div>
                    </a>|

                    @if (item.Role != "Admin")
                    {
                        <a class="a1" asp-action="Delete" asp-route-id="@item.Id">
                            <div class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash"></span>
                            </div>
                        </a>
                    }
                    else
                    {
                        <div class="btn btn-danger" disabled>

                            <span class="glyphicon glyphicon-trash"></span>
                        </div>

                    }

                </td>
            </tr>
        }
    </tbody>
</table>


